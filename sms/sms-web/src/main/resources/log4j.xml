<?xml version="1.0" encoding="GBK"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- 以下是appender的定义 -->
	<appender name="STDOUT" class="org.apache.log4j.ConsoleAppender">
		<param name="encoding" value="UTF-8" />
		<param name="threshold" value="DEBUG" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%n%d %-5p %c{2} - %m%n" />
		</layout>
	</appender>

	<appender name="PROJECT" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="${sms.loggingRoot}/sms.log" />
		<param name="append" value="true" />
		<param name="encoding" value="GBK" />
		<param name="threshold" value="DEBUG" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%n%d %-5p %c{2} - %m%n" />
		</layout>
	</appender>

	<appender name="PROJECT-DEBUG" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="${sms.loggingRoot}/sms-debug.log" />
		<param name="append" value="false" />
		<param name="encoding" value="GBK" />
		<param name="threshold" value="DEBUG" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%n%d %-5p %c{2} - %m%n" />
		</layout>
	</appender>

	<appender name="mybatis" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="${sms.loggingRoot}/sms-mybatis.log" />
		<param name="append" value="true" />
		<param name="encoding" value="GBK" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %-5p %c{2} - %m%n" />
		</layout>
	</appender>

	<!-- 记录数据里异常的脏数据 -->
	<appender name="dbDataExceptionAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="${sms.loggingRoot}/sms-db-data-exception.log" />
		<param name="append" value="true" />
		<param name="encoding" value="GBK" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %-5p %c{2} - %m%n" />
		</layout>
	</appender>
	<appender name="APACHE" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="${sms.loggingRoot}/sms-apache.log" />
		<param name="append" value="true" />
		<param name="encoding" value="GBK" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="%d [%X{requestURIWithQueryString}] %-5p %c{2} - %m%n" />
		</layout>
	</appender>

	<appender name="loginterceptor" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/www/logs/sms/sms-operator.log" />
		<param name="Encoding" value="GB2312" />
		<param name="MaxBackupIndex" value="300" />
		<param name="MaxFileSize" value="20MB" />
		<param name="DatePattern" value="'.'yyyy-MM-dd" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{ISO8601} %p [%c] - [%m]%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="info" />
			<param name="LevelMax" value="info" />
			<param name="acceptOnMatch" value="true" />
		</filter>
	</appender>

	<!-- 以下是logger的定义 -->
	<logger name="com.mybatis" additivity="true">
		<level value="DEBUG" />
		<appender-ref ref="mybatis" />
	</logger>
	<logger name="java.sql" additivity="true">
		<level value="DEBUG" />
		<appender-ref ref="mybatis" />
	</logger>
	<logger name="java.sql.ResultSet" additivity="true">
		<level value="DEBUG" />
		<appender-ref ref="mybatis" />
	</logger>
	<logger name="dbDataException" additivity="true">
		<level value="DEBUG" />
		<appender-ref ref="dbDataExceptionAppender" />
	</logger>
	<logger name="org.apache" additivity="true">
		<level value="INFO" />
		<appender-ref ref="APACHE" />
	</logger>
	<logger name="com.oneplus.commons.logs" additivity="false">
		<level value="info" />
		<appender-ref ref="loginterceptor" />
	</logger>
	
	<!-- Root logger的定义 -->
	<root>
		<level value="DEBUG" />
		<appender-ref ref="PROJECT" />
		<appender-ref ref="STDOUT" />
		<appender-ref ref="PROJECT-DEBUG" />
		<appender-ref ref="mybatis" />
		<appender-ref ref="loginterceptor"/>
	</root>
</log4j:configuration>